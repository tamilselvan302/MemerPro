<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:text="Editor" />

    <TextView
        android:id="@+id/text_size_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Size"
        android:layout_below="@+id/text_entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <SeekBar
        android:id="@+id/text_size_specifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/text_size_sample"
        android:max="200"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/font_color_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_size_specifier"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:text="Font Color" />

    <Button
        android:id="@+id/submit_button_for_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/text_color_selector"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete text"
        android:layout_below="@+id/submit_button_for_edit"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <EditText
        android:id="@+id/text_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Spinner
        android:id="@+id/text_color_selector"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/font_color_heading"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>